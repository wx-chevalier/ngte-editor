{
  "name": "ElectronOCR",
  "version": "0.0.1",
  "description": "OCR Toolkits For OSX Built On Electron, Tesseract And React",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=develop node ./dev-config/devServer.js",
    "storybook": "start-storybook -p 9001",
    "build:webpack": "NODE_ENV=production webpack -p --config webpack.config.js",
    "build": "npm run clean && npm run build:webpack",
    "build:style-check": "NODE_ENV=production CHECK=true webpack -p --config webpack.config.js",
    "deploy": "npm run build && ./node_modules/.bin/http-server dist",
    "clean": "rimraf dist",
    "clean-electron": "rm -rf ./release",
    "lint": "eslint src",
    "mocha": "./node_modules/mocha/bin/mocha -t 10000 --compilers js:babel-core/register",
    "mocha-all": "./node_modules/mocha/bin/mocha --compilers js:babel-core/register --recursive src/**/*.test.js",
    "electron": "electron -r babel-register ./main.dev",
    "package": "npm run clean-electron && NODE_ENV=production node -r babel-register package.js all",
    "package-osx": "npm run clean-electron && NODE_ENV=production node -r babel-register package.js darwin",
    "package-win": "npm run clean-electron && NODE_ENV=production node -r babel-register package.js win"
  },
  "author": "",
  "license": "ISC",
  "babel": {
    "extends": "./dev-config/.babelrc"
  },
  "appInfo": {
    "osx": {
      "title": "ElectronOCR",
      "background": "assets/osx/background.png",
      "icon": "assets/osx/icon.icns",
      "icon-size": 80,
      "contents": [
        {
          "x": 438,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 344,
          "type": "file"
        }
      ]
    },
    "win": {
      "title": "Image Viewer",
      "icon": "assets/win/icon.ico"
    }
  },
  "dependencies": {
    "glob": "^7.0.3",
    "shelljs": "^0.7.0"
  },
