{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es6", "es7", "dom"],
    "sourceMap": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "scripts"],
  "types": ["typePatches", "node"]
}
